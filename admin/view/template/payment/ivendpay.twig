{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}

    <div class="card panel-default">

      <div class="card-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment">

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ivendpay_status" id="input-status" class="form-select">
                {% if payment_ivendpay_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-api-key">{{ entry_api_key }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ivendpay_api_key" value="{{ payment_ivendpay_api_key }}" placeholder="{{ entry_api_key }}" id="input-api-key" class="form-control" />
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ivendpay_sort_order" value="{{ payment_ivendpay_sort_order }}" placeholder="{{ entry_ivendpay_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ivendpay_order_status_id" id="input-order-status" class="form-select">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_ivendpay_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-pending-status">{{ entry_pending_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ivendpay_pending_status_id" id="input-pending-status" class="form-select">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_ivendpay_pending_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-paid-status">{{ entry_paid_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ivendpay_paid_status_id" id="input-paid-status" class="form-select">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_ivendpay_paid_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-expired-status">{{ entry_expired_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ivendpay_expired_status_id" id="input-expired-status" class="form-select">
                {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == payment_ivendpay_expired_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-invalid-status">{{ entry_invalid_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ivendpay_invalid_status_id" id="input-invalid-status" class="form-select">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_ivendpay_invalid_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-canceled-status">{{ entry_canceled_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ivendpay_canceled_status_id" id="input-canceled-status" class="form-select">
                {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == payment_ivendpay_canceled_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
